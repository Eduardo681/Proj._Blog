<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<body> 
    <div class="container">
        <hr>
        <h2>Categorias</h2>
        <a class="btn btn-primary" href="/admin/categories/new">Criar nova categoria</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <th>ID</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </thead>
            <tbody>

                <%categories.forEach(category => {%>
                    <tr>
                        <th><%=category.id%></th>
                        <th><%=category.title%></th>
                        <th><%=category.slug%></th>
                        <th>
                            <a class="btn btn-warning" href="/admin/categories/edit/<%=category.id%>">Editar</a>
                            <form method="post" action="/categories/delete" onsubmit="confirmDelete(event,this)" style="display: inline;">
                                <input type="hidden" name='id' value='<%=category.id%>'>
                                <button class="btn btn-danger">Deletar</button>
                            </form>    
                            
                        </th>
                </tr>
                <%});%>
            </tbody>
        </table>
    </div>

</body>
<%- include ../../partials/footer.ejs %>
<script>
    function confirmDelete(event,form){
        event.preventDefault();
        let decision = confirm("Você realmente quer deletar essa categoria?")
        if(decision){
            form.submit()
        }
    }   
</script>